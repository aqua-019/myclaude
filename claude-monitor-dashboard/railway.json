{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd claude-monitor-dashboard/mcp-server && npm install"
  },
  "deploy": {
    "startCommand": "cd claude-monitor-dashboard && node mcp-server/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
